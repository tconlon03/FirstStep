<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tiarnan.firststep">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.tiarnan.firststep.ConfirmationActivity"
            android:launchMode="singleTop">
        </activity>
        <activity android:name="com.tiarnan.firststep.HomeActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tiarnan.firststep.ContactActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.tiarnan.firststep.NameAgeActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.tiarnan.firststep.WelcomeActivity"
            android:launchMode="singleTop">
        </activity>

        <service
            android:name="utilities.runMLService"
            android:exported="false" />
        <service
            android:name="utilities.emailVerificationService"
            android:stopWithTask="true"
            android:exported="false" />

    </application>

</manifest>